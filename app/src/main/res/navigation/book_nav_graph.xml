<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bookstore.ui.LoginViewModel.LoginFragment"
        android:label="fragment Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registeationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />

    </fragment>

    <fragment
        android:id="@+id/registeationFragment"
        android:name="com.example.bookstore.ui.RegistrationViewModel.RegistrationFragment"
        android:label="fragment_registeration"
        tools:layout="@layout/fragment_registeration"/>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.bookstore.SplashFragment"
        android:label="fragment Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>